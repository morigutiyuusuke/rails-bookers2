<div class = "container">
  <div class = "row">
    <div class = "col-sm-12 col-md8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
       <%= form_with model: @user, local:true do |f| %>
       
        <div class = "form-group">
          <local for="inputName">Name</local>
          <%= f.text_field :name, autofocus: true, id:"inputName",:class => "form-control"%>
        </div>
      <% end %>
    </div>
  </div>
</div>