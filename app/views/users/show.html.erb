<p>users/show.html.erb</p>

<%= render 'books/list',user:@user,book:@book  %>

   <div class ="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |b| %>
          <tr>
            <td>
            <%= link_to user_path(@user.id) do %>
            <%= image_tag @user.get_profile_image("40x40") %>
            <% end %>
            </td>
            <td>
                <%= link_to book_path(b.id) do %>
                <%= b.title %>
                <% end %>
              </td>
              <td><%= b.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>