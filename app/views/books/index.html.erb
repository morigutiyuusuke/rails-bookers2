<div class ="container px-5 px-sm-0">
  <div class ="row">
    
    <%= render 'list',user:@user,book:@book %>
    
    <div class ="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class='table table-hover table-inveres'>
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <%= @books.each do |b| %>
          <tr>
            <td>
              <%= link_to user_path(b.user.id) do %>
               <%= image_tag b.user.get_profile_image("40x40") %>
               <% end %>
            </td>
            <td>
              <%= link_to book_path(b.id) do %>
               <%= b.title %>
              <% end %>
            </td>
            <td><%= b.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table> 
    </div>
  </div>
</div>
