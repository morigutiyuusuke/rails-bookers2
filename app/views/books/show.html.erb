<div class ="container px-5 px-sm-0">
  <div class ="row">
    <%= render 'list',user:@user,book:@book %>
    
    <div class ="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class='table table-hover table-inverse'>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
              <%= image_tag @user.get_profile_image("40x40") %><br>
              <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.user.id) do %>
              <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body %></td>
            <% if user_signed_in? && current_user.id == @book.user_id %>
            <td><%= link_to 'Edit',edit_book_path(@book),class: "btn btn-success"%></td>
            <td><%= link_to 'Destroy',book_path(@book), method: :delete,"date-confirm" => "本当に消しますか？",class: "btn btn-danger" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
