<div class ="col-md-3">
      <h2>User info</h2>
      <table class ="table">
        <tr><%#= image_tag user.get_profile_image("63x63") %></tr>
      <tr>
        <th>name</th>
        <th><%#= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%#= user.introduction %></th>
      </tr>
      </table>
      <div class ="row">
        <%#= link_to edit_user_path(user.id), class: 'btn btn-outline-secondary btn-block' do %>
        <i class = "fas fa-user-cog"></i>
        <%# end %>
      </div>
      
      <h2>New Book</h2>
      <%= form_with model: @book,url:'/books',method: :post, local:true do |f| %>
      
        <p>Title</p>
        <%= f.text_field :title %>
        
        <P>Opinion</P>
        <%= f.text_area :body %><br>
        
        <%= f.submit 'Create Book' %>
        
      <% end %>
    </div>